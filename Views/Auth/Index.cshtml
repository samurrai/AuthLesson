@model AuthViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="text-center">
    <h2 class="display-4">Войти</h2>
    <form asp-action="Auth" method="post">
        <input asp-for="Email" placeholder="Введите email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Password" placeholder="Введите пароль" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="submit" value="Войти" />
    </form>
</div>